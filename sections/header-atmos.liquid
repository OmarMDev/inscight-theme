<script>
  function injectViewportWidthAsCssVariable() {
    const clientWidth = document.body.clientWidth;
    document.body.style.setProperty('--client-width', `${clientWidth}px`);
  }
  document.addEventListener('DOMContentLoaded', (event) => {
    injectViewportWidthAsCssVariable();
  });

  window.addEventListener('resize', injectViewportWidthAsCssVariable);
</script>

