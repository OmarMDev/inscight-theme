<script>
  class ProductHighlight {
    constructor() {
      this.productImage = document.getElementById('productImage');
      this.productSections = document.querySelectorAll('.product-section');
      this.currentProduct = 1;
      this.isAnimating = false;

      this.init();
    }

    init() {
      this.setupIntersectionObserver();
      this.preloadImages();
    }

    setupIntersectionObserver() {
      const options = {
        root: null,
        rootMargin: '-20% 0px -20% 0px',
        threshold: 0.0,
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const productNumber = parseInt(entry.target.dataset.product);
            const newImageSrc = entry.target.dataset.image;

            // Update active section
            this.updateActiveSection(entry.target);

            // Change product image if different
            if (productNumber !== this.currentProduct) {
              this.changeProductImage(newImageSrc, productNumber);
            }
          }
        });
      }, options);

      this.productSections.forEach((section) => {
        observer.observe(section);
      });
    }

    updateActiveSection(activeSection) {
      this.productSections.forEach((section) => {
        section.classList.remove('active');
      });
      activeSection.classList.add('active');
    }

    changeProductImage(newImageSrc, productNumber) {
      if (this.isAnimating) return;

      this.isAnimating = true;
      this.currentProduct = productNumber;

      // Fade out current image
      this.productImage.classList.add('fade-out');

      setTimeout(() => {
        // Change image source
        this.productImage.src = newImageSrc;

        // Wait for image to load
        this.productImage.onload = () => {
          // Fade in new image
          this.productImage.classList.remove('fade-out');
          this.productImage.classList.add('fade-in');

          setTimeout(() => {
            this.productImage.classList.remove('fade-in');
            this.isAnimating = false;
          }, 100);
        };

        // Handle image load error
        this.productImage.onerror = () => {
          console.error('Failed to load image:', newImageSrc);
          this.productImage.classList.remove('fade-out');
          this.isAnimating = false;
        };
      }, 400);
    }

    preloadImages() {
      this.productSections.forEach((section) => {
        const img = new Image();
        img.src = section.dataset.image;
      });
    }
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    new ProductHighlight();
  });

  // Handle smooth scrolling for CTA buttons (optional enhancement)
