<style>
  .product-highlight-section {
    display: flex;
    min-height: 100vh;
    max-width: 1200px;
    margin: 0 auto;
    background: white;
  }

  /* Left side - Sticky product image */
  .product-image-container {
    flex: 1;
    position: sticky;
    top: 0;
    height: 120vh;
    overflow: hidden;
    backdrop-filter: blur(15px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-image {
    width: 80%;
    aspect-ratio: 1;
    object-fit: contain;
    height: auto;
    box-shadow: rgba(18, 18, 18, 0.5) 0px 4px 15px 0px;
    object-fit: contain;
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  .product-image.fade-out {
    opacity: 0;
    transform: scale(0.8) rotate(-5deg);
  }

  .product-image.fade-in {
    opacity: 1;
    transform: scale(1) rotate(0deg);
  }

  /* Right side - Scrolling content */
  .product-content-container {
    flex: 1;
    padding: 60px 40px;
  }

  .product-section {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 40px 0;
    opacity: 0.6;
    transition: opacity 0.3s ease;
    margin-bottom: 50vh;
    &:first-of-type {
      margin-top: 100vh;
    }
  }

  .product-section.active {
    opacity: 1;
  }

  .product-section h2 {
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .product-section .price {
    font-weight: 600;
    margin-bottom: 30px;
  }

  .product-section p {
    color: #666;
    margin-bottom: 20px;
    line-height: 1.8;
  }

  .features-list {
    list-style: none;
    margin: 30px 0;
  }

  .features-list li {
    padding: 8px 0;
    color: #555;
    position: relative;
    padding-left: 25px;
  }

  .features-list li:before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #27ae60;
    font-weight: bold;
  }

  .cta-button {
    display: inline-block;
    padding: 15px 30px;
    border-radius: 30px;
    font-weight: 600;
    margin-top: 30px;
    text-decoration: none;
    text-align: center;
    color: rgba(0, 0, 0, 0.7);
    text-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .product-highlight-section {
      flex-direction: column;
    }

    .product-image-container {
      position: relative;
      height: 50vh;
      flex: none;
    }

    .product-content-container {
      padding: 30px 20px;
    }

    .product-section {
      min-height: auto;
      padding: 30px 0;
    }
  }

  /* Loading placeholder for images */
  .image-placeholder {
    width: 80%;
    aspect-ratio: 1;
    object-fit: contain;
    height: auto;
    box-shadow: rgba(18, 18, 18, 0.5) 0px 4px 15px 0px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.7);
  }
</style>
