<style>
.wholesale-inquiry-form {
  padding: 80px 0;
  background-color: #F6F1EB;
}

.wholesale-inquiry-form__heading {
  font-family: 'Antiga', serif;
  font-size: 16px;
  font-weight: 400;
  letter-spacing: 0.25em;
  color: #1d1919;
  margin: 0 auto 32px;
  text-transform: uppercase;
  text-align: center;
  max-width: 440px;
}

.wholesale-inquiry-form__container {
  max-width: 440px;
  margin: 0 auto;
  text-align: center;
  padding: 48px 56px;
}

.wholesale-inquiry-form__subheading {
  font-family: 'Adobe Garamond Pro', serif;
  font-size: 14px;
  font-weight: 400;
  line-height: 1.6;
  color: #1d1919;
  margin: 0 0 32px;
}

.wholesale-inquiry-form__form-wrapper {
  width: 100%;
}

.wholesale-inquiry-form__fields {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 28px;
}

.wholesale-inquiry-form__field {
  width: 100%;
}

.wholesale-inquiry-form__field input {
  width: 100%;
  padding: 12px 16px;
  background-color: #F6F1EB;
  border: 1px solid rgba(29, 25, 25, 0.08);
  border-radius: 0;
  font-family: 'Adobe Garamond Pro', serif;
  font-size: 13px;
  color: #1d1919;
  -webkit-appearance: none;
  appearance: none;
}

.wholesale-inquiry-form__field input::placeholder {
  color: rgba(29, 25, 25, 0.5);
  opacity: 1;
}

.wholesale-inquiry-form__field input:focus {
  outline: 2px solid #1d1919;
  outline-offset: 0;
}

.wholesale-inquiry-form__submit {
  display: flex;
  justify-content: center;
}

.wholesale-inquiry-form__button {
  padding: 11px 28px;
  background-color: #1d1919;
  color: #ffffff;
  font-family: 'Adobe Garamond Pro', serif;
  font-size: 13px;
  font-weight: 400;
  border: none;
  cursor: pointer;
  transition: opacity 0.2s ease;
  -webkit-appearance: none;
  appearance: none;
}

.wholesale-inquiry-form__button:hover {
  opacity: 0.8;
}

.wholesale-inquiry-form__success {
  padding: 24px;
  background-color: rgba(29, 25, 25, 0.05);
  margin-bottom: 24px;
  font-family: 'Adobe Garamond Pro', serif;
  font-size: 18px;
  color: #1d1919;
}

.wholesale-inquiry-form__errors {
  padding: 24px;
  background-color: rgba(255, 0, 0, 0.05);
  margin-bottom: 24px;
  font-family: 'Adobe Garamond Pro', serif;
  font-size: 16px;
  color: #c00;
  text-align: left;
}

.wholesale-inquiry-form__errors ul {
  list-style: disc;
  padding-left: 20px;
  margin: 0;
}

/* Mobile styles */
@media screen and (max-width: 749px) {
  .wholesale-inquiry-form {
    padding: 60px 0;
  }

  .wholesale-inquiry-form__heading {
    font-size: 14px;
    letter-spacing: 0.2em;
    margin-bottom: 24px;
  }

  .wholesale-inquiry-form__container {
    padding: 36px 14px;
  }

  .wholesale-inquiry-form__subheading {
    font-size: 16px;
    margin-bottom: 28px;
  }

  .wholesale-inquiry-form__field input {
    padding: 11px 26px;
    font-size: 16px;
  }

  .wholesale-inquiry-form__button {
    padding: 10px 24px;
    font-size: 16px;
  }

  .wholesale-inquiry-form__fields {
    gap: 10px;
    margin-bottom: 24px;
  }
}
</style>
<div class="wholesale-inquiry-form">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="wholesale-inquiry-form__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div
      class="wholesale-inquiry-form__container"
      style="background-color: {{ section.settings.box_background_color }};"
    >
      {% if section.settings.subheading != blank %}
        <p class="wholesale-inquiry-form__subheading">
          {{ section.settings.subheading }}
        </p>
      {% endif %}

      <div class="wholesale-inquiry-form__form-wrapper">
        {% form 'customer' %}
          {% if form.posted_successfully? %}
            <div class="wholesale-inquiry-form__success">
              <p>{{ section.settings.success_message }}</p>
            </div>
          {% else %}
            {% if form.errors %}
              <div class="wholesale-inquiry-form__errors">
                {{ form.errors | default_errors }}
              </div>
            {% endif %}

            {%- comment -%} Hidden tag to mark wholesale inquiries for Flow trigger {%- endcomment -%}
            <input type="hidden" name="contact[tags]" value="wholesale-inquiry">

            <div class="wholesale-inquiry-form__fields">
              <div class="wholesale-inquiry-form__field">
                <label for="contact-name" class="visually-hidden">Your name</label>
                <input
                  type="text"
                  id="contact-name"
                  name="contact[first_name]"
                  placeholder="Your name"
                  required
                >
              </div>

              <div class="wholesale-inquiry-form__field">
                <label for="contact-email" class="visually-hidden">Email address</label>
                <input
                  type="email"
                  id="contact-email"
                  name="contact[email]"
                  placeholder="Email address"
                  required
                >
              </div>

              <div class="wholesale-inquiry-form__field">
                <label for="contact-phone" class="visually-hidden">Phone number</label>
                <input
                  type="tel"
                  id="contact-phone"
                  name="contact[phone]"
                  placeholder="Phone number"
                >
              </div>

              <div class="wholesale-inquiry-form__field">
                <label for="contact-company" class="visually-hidden">Company name</label>
                <input
                  type="text"
                  id="contact-company"
                  name="contact[last_name]"
                  placeholder="Company name"
                >
              </div>
            </div>

            <div class="wholesale-inquiry-form__submit">
              <button type="submit" class="wholesale-inquiry-form__button">
                {{ section.settings.button_text }}
              </button>
            </div>
          {% endif %}
        {% endform %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Wholesale Inquiry Form",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "REQUEST DECK & PRICING"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Please complete the form below to receive our Pair Beautifullyâ„¢ deck and pricing."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Request wholesale deck & pricing"
    },
    {
      "type": "textarea",
      "id": "success_message",
      "label": "Success message",
      "default": "Thank you for your inquiry! We'll be in touch soon with our wholesale information."
    },
    {
      "type": "color",
      "id": "box_background_color",
      "label": "Box background color",
      "default": "#F1E4D6"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 200,
      "step": 10,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Wholesale Inquiry Form"
    }
  ]
}
{% endschema %}
